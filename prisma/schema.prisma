generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shipment {
  id                Int      @id @default(autoincrement())
  trackingCode      String   @unique
  sender            String
  recipient         String
  description       String
  weight            Float
  from              String
  to                String
  status            String
  location          String
  estimatedDelivery DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
